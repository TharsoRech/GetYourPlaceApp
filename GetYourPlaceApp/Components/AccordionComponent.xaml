<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GetYourPlaceApp.Components.AccordionComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cm="clr-namespace:GetYourPlaceApp.Components"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="accordionComponent"
    Padding="8,16,8,16">
    <ContentView.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="invertedBoolConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    <Border
        Padding="0"
        BackgroundColor="Transparent"
        Stroke="Transparent"
        StrokeThickness="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="28" />
        </Border.StrokeShape>
        <Grid
            Padding="8"
            BackgroundColor="{StaticResource GreenGYP}"
            RowDefinitions="auto,auto">
            <Grid ColumnDefinitions="auto,*">
                <Label
                    Margin="16,0,0,0"
                    FontSize="Medium"
                    Text="{Binding Title, Source={x:Reference accordionComponent}}"
                    TextColor="White" />
                <Image
                    Grid.Column="1"
                    Margin="16,0,16,0"
                    Aspect="AspectFit"
                    HeightRequest="30"
                    HorizontalOptions="End"
                    Source="expanddown.svg"
                    VerticalOptions="End"
                    WidthRequest="30">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource White}" />
                    </Image.Behaviors>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ExpandClickedCommand, Source={x:Reference accordionComponent}}" />
                    </Image.GestureRecognizers>
                    <Image.Triggers>
                        <DataTrigger
                            Binding="{Binding Expanded, Source={x:Reference accordionComponent}}"
                            TargetType="Image"
                            Value="True">
                            <Setter Property="Source" Value="expandup.svg" />
                        </DataTrigger>
                    </Image.Triggers>
                </Image>
            </Grid>
            <Grid
                Grid.Row="1"
                IsVisible="{Binding Expanded, Source={x:Reference accordionComponent}}"
                RowDefinitions="auto">
                <Grid>
                    <cm:LoadingComponent
                    IsLoading="{Binding IsLoading, Source={x:Reference accordionComponent}}"
                    IsVisible="{Binding IsLoading, Source={x:Reference accordionComponent}}"
                    LoadingColor="{StaticResource GreenLightGYP}"
                    LoadingText="Loading..." />
                    <Grid IsVisible="{Binding IsLoading, Source={x:Reference accordionComponent},Converter={StaticResource invertedBoolConverter}}">
                        <StackLayout x:Name="customContent" />
                        <Label
                         Padding="16"
                         IsVisible ="{Binding HasContent, Source={x:Reference accordionComponent},Converter={StaticResource invertedBoolConverter}}}"
                         HorizontalOptions="CenterAndExpand"
                         Text="No properties found"
                         FontSize="Medium"
                         TextColor="{StaticResource White}"
                         VerticalOptions="CenterAndExpand">
                        </Label>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</ContentView>

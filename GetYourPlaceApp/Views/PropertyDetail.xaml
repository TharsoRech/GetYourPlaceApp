<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetYourPlaceApp.Views.PropertyDetail"
             xmlns:vm="clr-namespace:GetYourPlaceApp.ViewModels"
             x:DataType="vm:PropertyDetailViewModel"
             xmlns:cm="clr-namespace:GetYourPlaceApp.Components"
             xmlns:sk="clr-namespace:Maui.Skeleton;assembly=Sharpnado.HorusSkeleton.Maui"
             Title="PropertyDetail">
    <Grid
          sk:Skeleton.IsParent="True"
          sk:Skeleton.IsBusy="{Binding IsLoading}"
          sk:Skeleton.BackgroundColor="{StaticResource Gray100}"
          sk:Skeleton.Animation="{sk:DefaultAnimation Source=Beat, Interval='600', Parameter='1.03'}">
        <cm:CarouselImageView
            Images="{Binding Property.Images}">
        </cm:CarouselImageView>
    </Grid>
</ContentPage>